<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<springProperty scope="context" name="logLevel" source="myapp.fluentd.host"/>
	<!-- Send debug messages to System.out -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="CLOUDWATCH" class="com.j256.cloudwatchlogbackappender.CloudWatchAppender">
		<region>us-east-1</region>
		<logGroup>roulette-api</logGroup>
		<logStream>testing</logStream>
		<layout>
			<!-- possible layout pattern -->
			<pattern>[%X{a} %X{b}] %-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
		</layout>
	</appender>

	<logger name="com.roulette.rouletteapi.beans" level="${logLevel}" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="CLOUDWATCH" />
	</logger>

	<!-- By default, the level of the root level is set to DEBUG -->
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>